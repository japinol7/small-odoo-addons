<odoo>
<record id="jap_sale_orders_same_partner_order_lines_wizard_form" model="ir.ui.view">
    <field name="name">jap.sale.orders.same.partner.order.lines.wizard.form</field>
    <field name="model">jap.sale.orders.same.partner.order.lines.wizard</field>
    <field name="arch" type="xml">
        <form string="Display sale order lines">
            <group name="container_group">
                <field name="sale_id" readonly="1" options="{'no_open': True}"/>
                <field name="partner_name" readonly="1"/>
            </group>
            <field name="line_ids" nolabel="1">
                <list string="Orders" no_open="1" create="false" edit="false" delete="false">
                    <field name="sale_line_id" invisible="1" column_invisible="1"/>
                    <field name="product_id" readonly="1"
                           options="{'no_open': True}"/>
                    <field name="product_uom_qty" readonly="1"/>
                    <field name="qty_to_invoice" readonly="1"/>
                    <field name="currency_id" readonly="1"
                           options="{'no_open': True}"/>
                    <field name="price_unit" readonly="1"/>
                    <field name="discount" readonly="1"/>
                    <field name="price_subtotal" readonly="1"/>
                    <field name="price_total" readonly="1"/>
                </list>
            </field>
        <footer>
            <button name="action_open_selected_sale_order" type="object"
                    string="Open this order" class="btn btn-primary">
            </button>
            <button string="Close &amp; Return" name="action_return" type="object"
                    default_focus="1" class="btn-primary">
            </button>
        </footer>
        </form>
    </field>
</record>
</odoo>
